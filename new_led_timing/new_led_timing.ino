    G = map(time, 0, color_chart[pos][3], G, Gnext);
    B = map(time, 0, color_chart[pos][3], B, Bnext);
    pixels.show();
        analogWrite(DAC0,4000);//debug only
    delay(60);
  }   
  pos++;
      analogWrite(DAC0,0);//debug only
}

